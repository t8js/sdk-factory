{
  "name": "@t8/sdk-factory",
  "version": "1.0.4",
  "description": "Typed SDK factory for web APIs",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npx npm-run-all cleanup compile",
    "cleanup": "node -e \"require('node:fs').rmSync('dist', { force: true, recursive: true });\"",
    "compile": "npx npm-run-all compile:src compile:tests",
    "compile:src": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral",
    "compile:tests": "npx esbuild tests.ts --bundle --outdir=dist --platform=neutral",
    "prepublishOnly": "npm run build",
    "preversion": "npx npm-run-all typecheck shape build test",
    "shape": "npx codeshape",
    "test": "node dist/tests.js",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/sdk-factory.git"
  },
  "keywords": [
    "api",
    "sdk",
    "schema",
    "request",
    "typed api",
    "typed sdk",
    "typed schema"
  ],
  "author": "axtk",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.9.0",
    "typescript": "^5.9.2"
  }
}
